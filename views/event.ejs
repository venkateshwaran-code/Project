<%- include("./partials/header") %>
<div class="container">

    <h3>Event Creation</h3>
    <form action="/Event" method="POST">
        <div class="form-group">
            <label for="eventname">Event Name</label>
            <input type="text" class="form-control" name="Name">
        </div>
        <div class="form-group">
            <label for="eventdate">Event Date</label>
            <input type="date" name="Eventdate" class="input-group date">
        </div>
        <div class="form-group">
            <label for="duration">Event Duration in days</label>
            <input type="number" name="Eventduration" class="form-control">
        </div>
        <div class="form-group">
            <label for="descrption">Event Descrption</label>
            <input type="text" name="Eventdescrption" class="form-control">
        </div>
            <button type="submit" class="btn btn-primary">Submit</button>
    </form>


    <h3>Event details</h3>
    <table class="table">
      <thead class="table-dark">
        <tr>
          <th scope="col">EventName</th>
          <th scope="col">Date</th>
          <th scope="col">Duration</th>
          <th scope="col">Descrption</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<events.length; i++) {%>
          <tr class="table">
            <td> <%= events[i].Name %></td>
            <td> <%= events[i].Eventdate %></td>
            <td> <%= events[i].Eventduration %></td>
            <td> <%= events[i].Eventdescrption %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
</div>
<%- include("./partials/footer") %>